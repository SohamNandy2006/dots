
# terminal emulator
super + Return
	alacritty	


# program launcher
super + d
	rofi -show drun

super + shift +d 
	/home/nolife/.config/bspwm/rofi/bin/asroot
super + e
	rofi -show emoji
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Open sxhkdrc config file
super F1
	alacritty -e vim ~/.config/sxhkd/sxhkdrc

Print
    flameshot gui

# restart bspwm
super F2
	bspc wm -r

# quit bspwm
super + shift + e
    bspc quit

# close and kill
super + shift + q
	bspc node -c

super + 1
    bspc desktop -f 1
super + 2
    bspc desktop -f 2
super + 3
    bspc desktop -f 3
super + 4
    bspc desktop -f 4
super + 5
    bspc desktop -f 5
super + 6
    bspc desktop -f 6
super + 7
    bspc desktop -f 7
super + 8
    bspc desktop -f 8
super + 9
    bspc desktop -f 9
super + 0
    bspc desktop -f 10

# very ugly fix (Weird bug when other more simple binding was used.)
super + shift + 1
    bspc node -d 1
super + shift + 2
    bspc node -d 2
super + shift + 3
    bspc node -d 3
super + shift + 4
    bspc node -d 4
super + shift + 5
    bspc node -d 5
super + shift + 6
    bspc node -d 6
super + shift + 7
    bspc node -d 7
super + shift + 8
    bspc node -d 8
super + shift + 9
    bspc node -d 9
super + shift + 0
    bspc node -d 10

alt + Tab
     bspc node -f last

ctrl + alt + Escape
    xkill

super + {h,v,q}
	bspc node -p {east,south,cancel}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + f
	bspc node -t "~"fullscreen

super + space
    bspc node -t "~"{floating,tiled}

super + shift + space
	bspc node -g {marked,locked,sticky,private}

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}

alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

	
# ========== User-specific ==========
# ===================================

super + w
	brave &	
super + r
	thunar &
super + x
    betterlockscreen -l

super + shift + s
		launchspotify &
super + c
    code

super + shift + i
    flameshot gui


# Screen brightness control
XF86MonBrightnessDown
    sudo xbacklight -dec 10
XF86MonBrightnessUp
    sudo xbacklight -inc 10
# Volume control
XF86AudioRaiseVolume
    pactl set-sink-volume $(pactl info | grep alsa_output | sed -r 's/^Default Sink: //') +5%
XF86AudioLowerVolume
    pactl set-sink-volume $(pactl info | grep alsa_output | sed -r 's/^Default Sink: //') -5%
XF86AudioMute
    pactl set-sink-mute $(pactl info | grep alsa_output | sed -r 's/^Default Sink: //') toggle

XF86Audio{Next,Prev,Play,Stop}
	playerctl --all-players {next,previous,play-pause,stop}
